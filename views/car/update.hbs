<div class="container col-md-8 mt-5">
    <form action="/car/edit/{{car._id}}" method="post" class="card p-3 bg-light text-center">
        <h2 class="text text-primary">Edit car</h2>
        <div class="form-group">
            <label class="text-success h6">car Name</label>
            <input class="form-control" type="text" name="name" value="{{car.name}}" required minlength="3"
                maxlength="20">
        </div>
        <div class="form-group mt-3">
            <label class="text-success h6">car description</label>
            <input class="form-control" type="text" name="description" value="{{car.description}}" required minlength="3"
                maxlength="200">
        </div>

<div class="form-group mt-3">
    <label class="text-success h6">car size</label>
    <input class="form-control" type="text" name="size" value="{{car.size}}" required minlength="3"
        maxlength="200">
</div>


        <div class="form-group mt-3">
            <label class="text-success h6">car Image</label><br>
            <img src="{{car.image}}" width="100" height="100">
            <input class="form-control mt-3" type="text" name="image" value="{{car.image}}" required>
        </div>
        <div class="form-group mt-3">
            <label class="text-success h6">car date</label>
            <input class="form-control" type="date" name="date" value="{{dateFormat car.date 'YYYY-MM-DD'}}" required>
        </div>
        
        <div class="form-group mt-3">
            <label class="text-success h6">car price</label>
            <input class="form-control" type="number" name="price" value="{{car.price}}" required min=0 max=500>
        </div>
        {{!-- <div class="form-group mt-3">
            <label class="text-success h6">status</label>
            {{#equal car.status true}}
            <input type="checkbox" value="true" true>
            {{/equal}}
            {{#equal car.status false}}
            <input type="checkbox" value="false" false>
            {{/equal}}
        </div> --}}
        <div class="form-group mt-3">
            <input class="btn btn-primary mt-3" type="submit" value="Edit">
        </div>
    </form>
</div>