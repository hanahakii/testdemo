
<div class="row">
    <div class="col">
        <img class="img-thumbnail" src="{{car.image}}" width="350" height="350">
    </div>
    <div class="col">
        <table class="table table-bordered text-center mt-4">
            <tr>
                <th colspan="2" class="text text-bg-success">car INFO</th>
            </tr>
            <tr>
                <th>Name</th>
                <th>{{car.name}}</th>
            </tr>
            <tr>
                <th>price</th>
                <th>{{car.price}}</th>
            </tr>
            <tr>
                <th>size</th>
                <th>{{car.size}}</th>
            </tr>
            <tr>
                <th>quantity</th>
                <th>{{car.quantity}}</th>
            </tr>
            <tr>
                <th>date</th>
                <th>{{dateFormat car.date "DD/MM/YYYY"}}</th>
            </tr>
            <tr>
                <th>description</th>
                <th>{{car.description}}</th>
            </tr>
        </table>
    </div>
</div>